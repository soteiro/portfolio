---
import BaseLayout from "@layouts/BaseLayout.astro";
// import FeedbackForm from '@components/FeedbackForm.astro';
---

<BaseLayout sideBarActiveItemID="contact">
  <section class="max-w-xl mx-auto py-8">
    <div class="animate-fade-in-up">
      <h1 class="text-3xl font-bold mb-4">Contacto</h1>
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/success"
        class="flex flex-col gap-4">
        <input type="hidden" name="form-name" value="contact" />
        <p class="hidden">
          <label>
            Don't fill this out if you're human: <input name="bot-field" />
          </label>
        </p>
        <label class="flex flex-col gap-2">
          <span class="font-medium">Nombre:</span>
          <input
            type="text"
            name="name"
            required
            class="input input-bordered w-full"
          />
        </label>
        <label class="flex flex-col gap-2">
          <span class="font-medium">Email:</span>
          <input
            type="email"
            name="email"
            required
            class="input input-bordered w-full"
          />
        </label>
        <label class="flex flex-col gap-2">
          <span class="font-medium">Mensaje:</span>
          <textarea
            name="message"
            required
            rows="6"
            class="textarea textarea-bordered w-full"></textarea>
        </label>
        <button type="submit" class="btn btn-primary w-full sm:w-auto"
          >Enviar</button
        >
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  /* Prefer reduced motion: disable animation */
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in-up {
      opacity: 1;
      animation: none;
      transform: none;
    }
  }
</style>
