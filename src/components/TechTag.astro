---
interface Props {
  tech: string;
}

const { tech } = Astro.props;

const techBadgeTypes: Record<string, string> = {
  // Frontend
  react: "badge-info",
  vue: "badge-success",
  angular: "badge-error",
  astro: "badge-warning",
  svelte: "badge-secondary",

  // Styling
  tailwindcss: "badge-accent",
  css: "badge-info",
  sass: "badge-secondary",
  daisyui: "badge-success",

  // Languages
  javascript: "badge-warning",
  typescript: "badge-info",
  python: "badge-primary",
  java: "badge-error",
  php: "badge-secondary",

  // Backend
  "node.js": "badge-success",
  nodejs: "badge-success",
  express: "badge-neutral",
  hono: "badge-warning",
  nestjs: "badge-error",

  // Databases
  postgresql: "badge-primary",
  mysql: "badge-warning",
  mongodb: "badge-success",
  sqlite: "badge-neutral",
  neon: "badge-accent",

  // Cloud & Infrastructure
  cloudflare: "badge-warning",
  serverless: "badge-info",

  // IoT & Hardware
  esp32: "badge-error",
  iot: "badge-secondary",
  platformio: "badge-warning",

  // Tools
  docker: "badge-info",
  git: "badge-warning",
  webpack: "badge-info",
  vite: "badge-secondary",
  prisma: "badge-primary",

  // Default
  default: "badge-ghost",
};

// Obtener tipo de badge para la tecnologÃ­a (case insensitive)
const getBadgeType = (tech: string): string => {
  const normalizedTech = tech.toLowerCase().replace(/\s+/g, "");
  return techBadgeTypes[normalizedTech] || techBadgeTypes.default;
};

const badgeType = getBadgeType(tech);
---

<span
  class={`badge ${badgeType} badge-sm hover:scale-110 transition-transform duration-200 cursor-default font-semibold shadow-md`}>
  {tech}
</span>
