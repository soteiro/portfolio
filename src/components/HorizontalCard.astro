---
interface props {
  title: string;
  description: string;
  imgSrc: string;
  href: string;
  tags: string[];
}
const { title, description, imgSrc, href, tags } = Astro.props;
---
<article>
  <a href={href} class="card lg:card-side bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
    <figure>
      <img src={imgSrc} alt={title} class="w-full h-48 object-cover lg:h-auto lg:w-48" />
    </figure>
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold">{title}</h2>
      <p class="text-gray-700">{description}</p>
      <div class="card-actions justify-end">
        {
          tags.slice(0, 3).map((tag) => (
            <span class="badge badge-outline">{tag}</span>
          ))
        }
      </div>
    </div>
  </a>
</article>