---
import TechTag from "./TechTag.astro";

interface props {
  title: string;
  description: string;
  image: string;
  href: string;
  tags: string[];
}
const { title, description, image, href, tags } = Astro.props;
---
<article>
  <a href={href} class="card lg:card-side bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
    <figure>
      <img src={image} alt={title} class="w-full h-48 object-cover lg:h-auto lg:w-48" />
    </figure>
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold">{title}</h2>
      <p class="text-base-content/70">{description}</p>
      <div class="card-actions justify-end flex-wrap gap-2">
        {
          tags && tags.slice(0, 4).map((tag) => (
            <TechTag tech={tag} />
          ))
        }
      </div>
    </div>
  </a>
</article>