---
const { sideBarActiveItemID } = Astro.props;
---

<ul class="menu grow shrink menu-md overflow-y-auto gap-1">
  <li>
    <a class="sidebar-link py-3 text-base rounded-lg" id="home" href="/"
      >Home</a>
  </li>
  <li>
    <a
      class="sidebar-link py-3 text-base rounded-lg"
      id="projects"
      href="/projects">Proyectos</a>
  </li>
  <li>
    <a class="sidebar-link py-3 text-base rounded-lg" id="cv" href="/cv">CV</a>
  </li>
  <li>
    <a
      class="sidebar-link py-3 text-base rounded-lg"
      id="contact"
      href="/contact">Contacto</a>
  </li>
</ul>

<style>
  .sidebar-link {
    border-left: 3px solid transparent;
    transition: all 0.25s ease;
  }
  .sidebar-link:hover {
    background: rgba(101, 192, 255, 0.06);
    border-left-color: rgba(101, 192, 255, 0.3);
  }
  .sidebar-link-active {
    background: linear-gradient(
      90deg,
      rgba(101, 192, 255, 0.12),
      transparent
    ) !important;
    border-left-color: #65c0ff !important;
    color: #65c0ff;
  }
</style>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID }}>
  const activeItemElem = document.getElementById(sideBarActiveItemID);
  activeItemElem && activeItemElem.classList.add("sidebar-link-active");
</script>
